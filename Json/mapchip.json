// 雛形
{
	"ナンバリング : {
		"map_id": マップの番号（山、城、etc）
		"chip" : {
			"x" : 任意 描画 x
			"y" : 任意 描画 y
			"w" : 任意 描画 width
			"h" : 任意 描画 height
			"dir" : 任意 描画 角度 direction
